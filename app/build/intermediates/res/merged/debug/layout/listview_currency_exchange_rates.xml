<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">



    <ImageView
        android:contentDescription="@string/flag"
        android:id="@+id/ivCurrencyFlag"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_usa" />

    <TextView
        android:id="@+id/tvCurrencyExchangeDetails"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivCurrencyFlag"
        android:layout_toLeftOf="@+id/tvCurrencyUpdate"
        android:layout_below="@+id/tvCurrencyCodes"
        android:text="0.12344"
        android:textColor="@color/transparent_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCurrencyCodes"
         android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCurrencyExchangeDetails"
        android:layout_alignParentTop="true"
        android:text="TSH"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvCurrencyUpdate"
         android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCurrencyExchangeDetails"
        android:layout_alignParentRight="true"
        android:text="Never"
       android:textSize="10dp"
        android:textStyle="italic" />

</RelativeLayout>
